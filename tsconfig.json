{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "esModuleInterop":true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "./src/**/*", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx"
  ],
  "exclude": [
    "./dist"
  ]
}